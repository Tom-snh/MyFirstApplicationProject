<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myrecyclerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mon_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mon_icon"
        android:supportsRtl="true">

        <activity
            android:name=".presentation.view.FirstActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/first_info_txt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.view.MainActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".presentation.view.InfoActivity"
            android:theme="@style/AppTheme"
            android:label="@string/app_name_second">
        </activity>

        <activity
            android:name=".presentation.view.GameActivity"
            android:theme="@style/AppTheme"
            android:label="@string/game_label">
        </activity>

    </application>

</manifest>